<AnchorPane stylesheets="@styles.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dc23bfilezipper.HubController">
   <children>
      <GridPane layoutY="-1.0" opacity="0.75" prefHeight="400.0" prefWidth="600.0" styleClass="content-box">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label alignment="CENTER" prefHeight="84.0" prefWidth="300.0" text="File Zipper Hub" GridPane.columnIndex="1" GridPane.columnSpan="2">
               <font>
                  <Font size="24.0" />
               </font>
               <styleClass>
                  <String fx:value="top-label" />
                  <String fx:value="text-white" />
               </styleClass>
            </Label>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="43.0" prefWidth="106.0" text="User Name:" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <styleClass>
                  <String fx:value="text-white" />
                  <String fx:value="grid-label" />
               </styleClass></Label>
            <TextField fx:id="user" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <Label alignment="CENTER" prefHeight="43.0" prefWidth="106.0" text="Password:" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <styleClass>
                  <String fx:value="text-white" />
                  <String fx:value="grid-label" />
               </styleClass></Label>
            <PasswordField fx:id="pass" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <Button fx:id="logon_btn" mnemonicParsing="false" onAction="#login_validate" text="Login" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3">
               <styleClass>
                  <String fx:value="login-btn" />
                  <String fx:value="success-btn" />
                  <String fx:value="text-white" />
               </styleClass></Button>
            <Label fx:id="message" alignment="CENTER" prefHeight="84.0" prefWidth="300.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="5">
               <font>
                  <Font size="24.0" />
               </font>
               <styleClass>
                  <String fx:value="top-label" />
                  <String fx:value="text-danger" />
               </styleClass>
            </Label>
            <Button mnemonicParsing="false" onAction="#viewAppInfo" text="View App Info" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="4">
               <styleClass>
                  <String fx:value="login-btn" />
                  <String fx:value="warning-btn" />
                  <String fx:value="text-white" />
               </styleClass>
            </Button>
         </children>
      </GridPane>
   </children>
</AnchorPane>
